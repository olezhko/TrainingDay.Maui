<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TrainingDay.Maui.ViewModels"
             xmlns:controls="clr-namespace:TrainingDay.Maui.Controls"
             xmlns:resx="clr-namespace:TrainingDay.Maui.Resources.Strings"
             xmlns:data="clr-namespace:TrainingDay.Common.Models;assembly=TrainingDay.Common"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TrainingDay.Maui.Views.ExerciseItemPage"
             Shell.TabBarIsVisible="False"
             Padding="5">
    <Shell.TitleView>
        <Grid ColumnDefinitions="*,auto, auto" Padding="10,0" ColumnSpacing="10">
            <Label x:Name="TitleLabel" Grid.Column="0" Text="{x:Static resx:AppResources.CreateNewString}" FontSize="Medium" VerticalOptions="Center" FontAttributes="Bold"/>

            <ImageButton Grid.Column="1" WidthRequest="30" HeightRequest="30" Source="save.png" Clicked="Save_clicked">
                <ImageButton.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                </ImageButton.Behaviors>
            </ImageButton>

            <ImageButton x:Name="DeleteExerciseToolbarItem" Grid.Column="2" WidthRequest="30" HeightRequest="30" Source="remove.png" Clicked="Remove_clicked">
                <ImageButton.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                </ImageButton.Behaviors>
            </ImageButton>
        </Grid>
    </Shell.TitleView>
    <ContentPage.BindingContext>
        <viewModels:ExerciseViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <ScrollView>
            <Grid x:Name="ContentGrid" RowDefinitions="auto,auto,auto,auto,auto,auto" RowSpacing="10">
                <Border Grid.Row="0" Style="{StaticResource MaterialBorder}" IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}">
                    <Grid>
                        <Label Text="{x:Static resx:AppResources.NameString}" Style="{StaticResource MaterialLabel}"/>
                        <Entry x:Name="NameEditor" FontSize="22" IsReadOnly="{Binding IsBase}" Keyboard="Text" Text="{Binding Name}" VerticalOptions="End" />
                    </Grid>
                </Border>

                <Label
                    x:Name="NameLabel"
                    Grid.Row="0"
                    FontSize="Large"
                    IsVisible="{Binding IsBase}"
                    Text="{Binding Name}" HorizontalTextAlignment="Center"
                    VerticalOptions="Start" />

                <Border Padding="20" Grid.Row="1" StrokeDashArray="5,5" StrokeDashOffset="5" StrokeShape="RoundRectangle 20" BackgroundColor="{StaticResource Gray100}">
                    <VerticalStackLayout Spacing="10">
                        <Border StrokeShape="RoundRectangle 20" WidthRequest="120" HeightRequest="120" BackgroundColor="{StaticResource Gray200}">
                            <controls:ImageCache x:Name="ExerciseImage" CodeNum="{Binding CodeNum, Mode=TwoWay}" ExerciseId="{Binding LoadId, Mode=TwoWay}" >
                                <controls:ImageCache.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="White" />
                                </controls:ImageCache.Behaviors>
                            </controls:ImageCache>
                        </Border>

                        <Button BackgroundColor="{StaticResource PlaceholderColor}" Text="{x:Static resx:AppResources.AddImage}" CornerRadius="20" HorizontalOptions="Center" Padding="30,0"
                                    Clicked="Button_Clicked" IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}"/>
                    </VerticalStackLayout>
                </Border>

                <Border StrokeShape="RoundRectangle 20" Padding="15" Grid.Row="2">
                    <StackLayout>
                        <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                            <Label Text="{x:Static resx:AppResources.TargetMuscles}" FontSize="17" VerticalOptions="Center"/>
                            <ImageButton Grid.Column="1" HorizontalOptions="Start" Source="edit.png" IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}" Clicked="ShowMusclesLookup_Click"/>
                        </Grid>
                        <StackLayout>
                            <FlexLayout BindableLayout.ItemsSource="{Binding Muscles}" Style="{StaticResource MuscleFlexStyle}" >
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <AbsoluteLayout>
                                            <Border Style="{StaticResource MuscleBorderCellStyle}">
                                                <Label Text="{Binding Name}" FontSize="14" TextColor="White" LineBreakMode="NoWrap"/>
                                            </Border>
                                        </AbsoluteLayout>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <Border StrokeShape="RoundRectangle 20" Padding="15" Grid.Row="3" >
                    <Grid ColumnSpacing="20">
                        <Label x:Name="DifficultyLevelLabel" Text="{x:Static resx:AppResources.Difficulty}" FontSize="17" VerticalOptions="Center"/>

                        <toolkit:RatingView HorizontalOptions="End" Grid.Column="1"
                                            EmptyShapeColor="Transparent"
                                            FillColor="{StaticResource Main}"
                                            FillOption ="Shape"
                                            ShapePadding="1,2,2,1"
                                            ShapeDiameter="25"
                                            MaximumRating="3"
                                            Rating="{Binding DifficultType}"
                                            Shape="Star"
                                            RatingChanged="RatingView_RatingChanged"
                                            ShapeBorderColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}"
                                            ShapeBorderThickness="0.3"
                                            Spacing="1" />
                    </Grid>
                </Border>

                <StackLayout Grid.Row="4" IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}">
                    <RadioButton x:Name="ExerciseByRepsCheckBox" GroupName="ExerciseType" BackgroundColor="Transparent"
                             IsChecked="{Binding Tags,Converter={StaticResource ExerciseTagExistsConverter}, ConverterParameter={x:Static data:ExerciseTags.ExerciseByReps}, Mode=OneWay}"
                             IsEnabled="{Binding IsBase,Converter={StaticResource InverseBooleanConverter}}"/>
                    <RadioButton x:Name="ExerciseByRepsAndWeightCheckBox" GroupName="ExerciseType" BackgroundColor="Transparent"
                             IsChecked="{Binding Tags,Converter={StaticResource ExerciseTagExistsConverter}, ConverterParameter={x:Static data:ExerciseTags.ExerciseByRepsAndWeight}, Mode=OneWay}"
                             IsEnabled="{Binding IsBase,Converter={StaticResource InverseBooleanConverter}}"/>
                    <RadioButton x:Name="ExerciseByTimeCheckBox" GroupName="ExerciseType" BackgroundColor="Transparent"
                             IsChecked="{Binding Tags,Converter={StaticResource ExerciseTagExistsConverter}, ConverterParameter={x:Static data:ExerciseTags.ExerciseByTime}, Mode=OneWay}"
                             IsEnabled="{Binding IsBase,Converter={StaticResource InverseBooleanConverter}}"/>
                </StackLayout>

                <Border Grid.Row="5" Padding="10" StrokeShape="RoundRectangle 20">
                    <Grid RowDefinitions="auto,auto,auto,auto" RowSpacing="15">
                        <Label Text="{x:Static resx:AppResources.ExerciseInstructions}" FontSize="17"/>

                        <VerticalStackLayout Grid.Row="1" Spacing="0">
                            <Label FontSize="15" Text="{x:Static resx:AppResources.StartPosition}" VerticalTextAlignment="Center" />
                            <Border StrokeShape="RoundRectangle 20" Padding="10">
                                <Grid>
                                    <Editor MinimumHeightRequest="90"
                                    x:Name="StartingDescEditor"
                                    AutoSize="TextChanges" Keyboard="Text"
                                    FontSize="Small"
                                    IsReadOnly="{Binding IsBase}"
                                    IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}"
                                    Placeholder="{x:Static resx:AppResources.StartPosition}" PlaceholderColor="Gray"
                                    BackgroundColor="Transparent"
                                    Text="{Binding Description.StartPosition}" />
                                    <Label FontSize="Small" IsVisible="{Binding Source={x:Reference StartingDescEditor}, Path=IsReadOnly}" 
                                   Text="{Binding Description.StartPosition}" />
                                </Grid>
                            </Border>

                            <Label Text="{x:Static resx:AppResources.DescribeStartingPosition}" TextColor="LightSlateGray" IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2" Spacing="0">
                            <Label FontSize="15" Text="{x:Static resx:AppResources.Execution}" VerticalTextAlignment="Center" />
                            <Border StrokeShape="RoundRectangle 20" Padding="10" >
                                <Grid>
                                    <Editor MinimumHeightRequest="90"
                                    x:Name="ExecDescEditor"
                                    AutoSize="TextChanges" Keyboard="Text"
                                    FontSize="Small"
                                    IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}"
                                    IsReadOnly="{Binding IsBase}"
                                    Placeholder="{x:Static resx:AppResources.Execution}" PlaceholderColor="Gray"
                                    BackgroundColor="Transparent"
                                    Text="{Binding Description.Execution}" />
                                    <Label FontSize="Small" IsVisible="{Binding Source={x:Reference ExecDescEditor}, Path=IsReadOnly}" Text="{Binding Description.Execution}" />
                                </Grid>
                            </Border>

                            <Label Text="{x:Static resx:AppResources.DescribePerformMovement}" TextColor="LightSlateGray" IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="3" Spacing="0">
                            <Label FontSize="15" Text="{x:Static resx:AppResources.Advice}" VerticalTextAlignment="Center" />
                            <Border StrokeShape="RoundRectangle 20" Padding="10">
                                <Grid>
                                    <Editor MinimumHeightRequest="90" Keyboard="Text"
                                    x:Name="AdviceDescEditor"
                                    AutoSize="TextChanges"
                                    FontSize="Small"
                                    IsReadOnly="{Binding IsBase}"
                                    IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}"
                                    Placeholder="{x:Static resx:AppResources.Advice}" PlaceholderColor="Gray"
                                    BackgroundColor="Transparent"
                                    Text="{Binding Description.Advice}" />

                                    <Label FontSize="Small" IsVisible="{Binding Source={x:Reference AdviceDescEditor}, Path=IsReadOnly}" Text="{Binding Description.Advice}" />
                                </Grid>
                            </Border>

                            <Label Text="{x:Static resx:AppResources.TipsImportantNotes}" TextColor="LightSlateGray" IsVisible="{Binding IsBase, Converter={StaticResource InverseBooleanConverter}}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>
        </ScrollView>

        <Grid x:Name="MuscleSelectorView" IsVisible="False" Padding="20" HorizontalOptions="Fill" VerticalOptions="Fill"
                     BackgroundColor="{AppThemeBinding Light='#77E3E3E3', Dark='#77000000'}">
            <Grid BackgroundColor="{AppThemeBinding Light=LightGray, Dark=Black}" Padding="20" RowSpacing="10" VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="500"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label TextColor="Orange" FontSize="Large" Text="{x:Static resx:AppResources.SelectMusclesString}"/>

                <CollectionView Grid.Row="1" x:Name="MuscleSelectorList" VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsChecked}" />
                                <Label Text="{Binding Text}" VerticalOptions="Center" VerticalTextAlignment="Center" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid Grid.Row="2" VerticalOptions="End" ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button CornerRadius="20" Text="{x:Static resx:AppResources.CancelString}" Clicked="MuscleSelectorViewCancel_OnClicked" 
                            BorderColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" 
                            TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" BorderWidth="1" BackgroundColor="Transparent" />
                    <Button CornerRadius="20" Grid.Column="1" Text="{x:Static resx:AppResources.SelectString}" Clicked="MuscleSelectorViewApprove_OnClicked" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>